<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="prod2testing.run_command" class="Prod2Testing\Commands\RunCommand">
            <argument type="service" id="dbal_connection" />
            <argument>%shopware.db%</argument>
            <argument type="service" id="config_writer" />
            <tag name="console.command" />
        </service>

        <service class="Prod2Testing\Commands\ResetPasswordsCommand" id="prod2testing.commands.reset_passwords_command">
            <argument id="dbal_connection" type="service"/>
            <argument>%shopware.db%</argument>
            <tag name="console.command"/>
        </service>
    </services>
</container>
